{
  "name": "@statrookie/root",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "npx lerna run build",
    "start": "npx lerna run start",
    "dev:core": "npx lerna run dev --scope @statrookie/core",
    "build:core": "npx lerna run build --scope @statrookie/core",
    "start:core": "npx lerna run start --scope @statrookie/core",
    "dev:sharks": "npx concurrently \"yarn run dev:core\" \"npx lerna run dev --scope @statrookie/sharks\"",
    "build:sharks": "npx lerna run build --scope @statrookie/sharks --verbose",
    "start:sharks": "npx lerna run start --scope @statrookie/sharks"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "lerna": "^6.4.1",
    "typescript": "^4.4.3"
  }
}
